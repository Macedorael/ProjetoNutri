@model ProjetoNutri.Models.Circunferencia

@{
    ViewData["Title"] = "Detalhes da Circunferência";
}

<h2>Detalhes da Circunferência</h2>

<p><strong>Projeto:</strong> @Model.Projeto.NomeProjeto</p>
<p><strong>Paciente:</strong> @Model.Projeto.Paciente.Nome</p>

<h3>Medidas e Índices</h3>

<div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px;">
    <div>
        <p><strong>Pescoço:</strong> @Model.Pescoco cm</p>
        <p><strong>Ombro:</strong> @Model.Ombro cm</p>
        <p><strong>Tórax:</strong> @Model.Torax cm</p>
        <p><strong>Braço Direito:</strong> @Model.Bracodireito cm</p>
        <p><strong>Braço Esquerdo:</strong> @Model.Bracoesquerdo cm</p>
        <p><strong>Braço Direito Contraído:</strong> @Model.Bracodireitocontraido cm</p>
        <p><strong>Braço Esquerdo Contraído:</strong> @Model.Bracoesquerdocontraido cm</p>
    </div>
    <div>
        <p><strong>Cintura:</strong> @Model.Cintura cm</p>
        <p><strong>Quadril:</strong> @Model.Quadril cm</p>
        <p><strong>Abdome:</strong> @Model.Abdome cm</p>
        <p><strong>Coxa Distal Direita:</strong> @Model.Coxadistaldireita cm</p>
        <p><strong>Coxa Distal Esquerda:</strong> @Model.Coxadistalesquerda cm</p>
        <p><strong>Coxa Medial Direita:</strong> @Model.Coxamedialdireita cm</p>
        <p><strong>Coxa Medial Esquerda:</strong> @Model.Coxamedialesquerda cm</p>
    </div>
    <div>
        <p><strong>Coxa Proximal Direita:</strong> @Model.Coxaproximaldireita cm</p>
        <p><strong>Coxa Proximal Esquerda:</strong> @Model.Coxaproximalesquerda cm</p>
        <p><strong>Panturrilha Direita:</strong> @Model.Panturrilhadireita cm</p>
        <p><strong>Panturrilha Esquerda:</strong> @Model.Panturrilhaesquerda cm</p>
        <p><strong>RCQ (Relação Cintura-Quadril):</strong> @Model.Rcq</p>
        <p><strong>Classificação:</strong> @Model.Classificacao</p>
    </div>
</div>

<a asp-action="EditarCircunferencia" asp-route-id="@Model.Id" class="btn btn-secondary">Editar</a>

<form asp-action="DeletarCircunferencia" method="post" style="display:inline;">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-secondary delete-button">Deletar</button>
</form>

<a asp-action="AntropometriaProjeto" asp-controller="Projeto" asp-route-projetoId="@Model.IdProjeto" class="btn btn-secondary">Voltar</a>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.delete-button').on('click', function(e) {
                var confirmed = confirm('Você tem certeza que deseja deletar esta circunferência?');
                if (!confirmed) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
