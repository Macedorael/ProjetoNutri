@model ProjetoNutri.Models.Projeto

<h2>Editar Projeto</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="PacienteId" />

    <div class="form-group">
        <label asp-for="NomeProjeto"></label>
        <input asp-for="NomeProjeto" class="form-control" />
        <span asp-validation-for="NomeProjeto" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="IndexProjeto" asp-route-pacienteId="@Model.PacienteId" class="btn btn-secondary">Cancelar</a>
</form>
