        {
            
            <p><strong>Percentual de Gordura (Pollock3):</strong> @ViewBag.PercentualGorduraPollock3%</p>
            <p><strong>Peso Residual:</strong> @ViewBag.PesoResidual.ToString("F2") kg</p>
