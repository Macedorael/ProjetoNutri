@model ProjetoNutri.Models.ProjetoImcViewModel

@{
    ViewData["Title"] = "Antropometria do Projeto";
}
<div>
    <h1>Antropometria</h1>

    <a asp-action="DetalheProjeto" asp-route-id="@Model.Projeto.Id" class="btn btn-secondary">Voltar para o Projeto</a>
    <img src="../Imagens/adesivos.png" alt="Descrição da imagem">

    <br><br>
</div>

<div > 
    <h4>Paciente: @Model.Projeto.Paciente.Nome @Model.Projeto.Paciente.Sobrenome</h4>
    <h5>Projeto: @Model.Projeto.NomeProjeto</h5>
    <h5>Data da avaliação: @Model.Projeto.DataCriacao.ToString("dd/MM/yyyy")</h5>
    
<br>
    <div id="link">
        @foreach (var imc in Model.Imcs)
            {
                <a asp-action="DetalheImc" asp-controller="Imc" asp-route-id="@imc.Id" class="link">
                    Detalhes da IMC
                </a> <span>|</span>
            } 
                
            @foreach (var circunferencia in Model.Circunferencias)
            {
                <a asp-action="DetalheCircunferencia" asp-controller="Circunferencia" asp-route-id="@circunferencia.Id" class="link">
                     Detalhes da Circunferência
                </a> <span>|</span>
            } 

                @foreach (var prega in Model.Prega)
            {
                <a asp-action="DetalhePrega" asp-controller="Pregas" asp-route-id="@prega.Id" class="link">
                     Detalhes da prega 
                </a>
            }
    </div>
    <hr class="my-2" />
</div>
<div>
    <div style="display: flex; gap: 20px;">
        <!-- Div da esquerda (conteúdo principal) -->
        <div style="flex: 2;">
            <div class="d-flex justify-content-start">
                @if (ViewBag.PercentualGorduraPollock3 != null)
                {
                    <p class="menu-item" id="pollock3">Pollock 3</p>
                
            
                }
                    
                @if (ViewBag.PercentualGorduraPollock7 != null)
                {
                    <p class="menu-item" id="pollock7">Pollock 7</p>
                }

                @if (ViewBag.PercentualGorduraPetroski != null)
                { 
                    <p class="menu-item" id="petroski">Petroski</p>
                }

                @if (ViewBag.PercentualGorduraGuedes != null)
                {
                    <p class="menu-item" id="guedes">Guedes</p>
                }

                @if (ViewBag.PercentualGorduraDurnin != null)
                { 
                    <p class="menu-item" id="durnin">Durnin</p>
                }

                @if (ViewBag.PercentualGorduraFaulkner != null)
                { 
                    <p class="menu-item" id="faulkner">Faulkner</p>
                }
            </div>
                           
