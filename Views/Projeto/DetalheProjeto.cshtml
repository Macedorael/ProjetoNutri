@model ProjetoNutri.Models.Projeto

@{
    ViewData["Title"] = "Detalhes do Projeto";
}

<h1>Detalhes do Projeto</h1>

<a asp-action="IndexProjeto" asp-route-pacienteId="@Model.PacienteId" class="btn btn-secondary">Voltar para a lista</a> 
<br>
<br>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nome do Projeto
        </dt>
        <dd class="col-sm-10">
            @Model.NomeProjeto
        </dd>

        <dt class="col-sm-2">
            Data de Criação
        </dt>
        <dd class="col-sm-10">
            @Model.DataCriacao.ToString("dd/MM/yyyy")  <!-- Formatação de data, se necessário -->
        </dd>

        <dt class="col-sm-2">
            Paciente
        </dt>
        <dd class="col-sm-10">
            @if (Model.Paciente != null)
            {
               @($"{Model.Paciente.Nome} {Model.Paciente.Sobrenome}")
            }
            else
            {
                <span>Paciente não informado</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="EditarProjeto" asp-route-id="@Model.Id" class="btn btn-secondary">Editar</a>  
    <a asp-action="DeletarProjeto" asp-route-id="@Model.Id" class="btn btn-secondary">Deletar</a>
    <a asp-action="AntropometriaProjeto" asp-route-projetoId="@Model.Id" class="btn btn-secondary">Antropometria</a>
    <a asp-action="IndexRefeicao" asp-controller="Refeicao" asp-route-IdProjeto="@Model.Id" class="btn btn-secondary">Adicionar Planejamento</a>
</div>
