@model ProjetoNutri.Models.ProjetoDietaViewModel

@{
    ViewData["Title"] = "Planejamento Alimentar";
}

<!-- Bot√£o voltar -->
<div>
    <a asp-action="Detalhe" asp-controller="Paciente" asp-route-id="@Model.Projeto.PacienteId" class="btn btn-secondary mb-3">
        Voltar
    </a>
</div>

<!-- Layout lado a lado com Bootstrap -->
<div class="row align-items-stretch">
    <!-- Coluna 1: Detalhes do Projeto -->
    <div class="col-md-6">
        <div class="container-projeto">
            <div class="projeto-detalhes-header d-flex justify-content-between align-items-center mb-3">
                <h3>Detalhes do Projeto</h3>
                <div class="acoes-projeto">
                    <a asp-action="EditarProjeto" asp-route-id="@Model.Projeto.Id" title="Editar Projeto" class="btn btn-sm me-2">
                        <i class="bi bi-pencil-fill"></i>
                    </a>

                    <form asp-action="DeletarProjeto" method="post" class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir este projeto?');">
                        <input type="hidden" name="id" value="@Model.Projeto.Id" />
                        <input type="hidden" name="pacienteId" value="@Model.Projeto.PacienteId" />
                        <button type="submit" class="btn btn-sm me-2" title="Excluir Projeto">
                            <i class="bi bi-trash2-fill"></i>
                        </button>
                    </form>
                </div>
            </div>

            <dl class="row projeto-info">
                <dt class="col-sm-4 fw-bold">Projeto</dt>
                <dd class="col-sm-8">@Model.Projeto.NomeProjeto</dd>

                <dt class="col-sm-4 fw-bold">Data</dt>
                <dd class="col-sm-8">@Model.Projeto.DataCriacao.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4 fw-bold">Paciente</dt>
                <dd class="col-sm-8">
                    @if (Model.Projeto.Paciente != null)
                    {
                        @($"{Model.Projeto.Paciente.Nome} {Model.Projeto.Paciente.Sobrenome}")
                    }
                    else
                    {
                        <span>Paciente n√£o informado</span>
                    }
                </dd>
            </dl>

            <div class="mt-3">
                <a asp-action="AntropometriaProjeto" asp-route-projetoId="@Model.Projeto.Id" class="btn btn-secondary me-2">Antropometria</a>
                <a asp-action="IndexRefeicao" asp-controller="Refeicao" asp-route-IdProjeto="@Model.Projeto.Id" class="btn btn-secondary">Adicionar Planejamento</a>
            </div>
        </div>
    </div>

    <!-- Coluna 2: Resumo Nutricional + IMC -->
    <div class="col-md-6 d-flex flex-column align-items-start gap-4">
        <div class="container-resumo">
            <div class="resumo-nutricional">
                <h3 class="text-center">Resumo Nutricional</h3>
                <div class="row">
                    <div class="col-auto">
                        <strong>üí™ Prote√≠na:</strong>
                        <span>@Model.TotalProteinaGeral.ToString("F2") g</span>
                    </div>
                    <div class="col-auto">
                        <strong>ü•ì Lip√≠dio:</strong>
                        <span>@Model.TotalLipidioGeral.ToString("F2") g</span>
                    </div>
                    <div class="col-auto">
                        <strong>üçû Carboidrato:</strong>
                        <span>@Model.TotalCarboidratoGeral.ToString("F2") g</span>
                    </div>
                    <div class="col-auto">
                        <strong>üî• Energia:</strong>
                        <span>@Model.TotalKcalGeral.ToString("F2") kcal</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bloco de An√°lises de pesos e medidas -->
        <div class="container-projeto">
            <div id="detalhe-projeto-imc">
                <h3 id="titulo">An√°lises de pesos e medidas</h3>
                <p><strong>Peso atual: </strong>@(ViewBag.Peso ?? "‚Äî") Kg</p>
                <p><strong>Altura atual: </strong>@(ViewBag.Altura ?? "‚Äî") M</p>
                <p><strong>√çndice de Massa Corporal: </strong>@(ViewBag.ValorImc?.ToString("F2") ?? "‚Äî") Kg/m¬≤</p>
                <p><strong>Classifica√ß√£o do IMC: </strong>@(ViewBag.ClassificacaoImc ?? "‚Äî")</p>
                <p><strong>Faixa de peso ideal: </strong>@(ViewBag.PesoIdeal ?? "‚Äî") kg</p>
                <p><strong>Rela√ß√£o da Cintura/Quadril (RCQ): </strong>@(ViewBag.RCQ?.ToString("F2") ?? "‚Äî")</p>
                <p><strong>Risco Metab√≥lico por RCQ: </strong>@(ViewBag.ClassificacaoRCQ ?? "‚Äî")</p>
                <p><strong>CMB (cm): </strong>@(ViewBag.CMB?.ToString("F2") ?? "‚Äî") cm (@(ViewBag.PorcentagemCMB?.ToString("F2") ?? "‚Äî")%)</p>
                <p><strong>Classifica√ß√£o CMB: </strong>@(ViewBag.ClassificacaoCMB ?? "‚Äî")</p>
            </div>
        </div>
    </div>
</div>
