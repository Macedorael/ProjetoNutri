@model ProjetoNutri.Models.Paciente

@{
    ViewData["Title"] = "Criar Paciente";
}

<h2>Criar Novo Paciente</h2>

<form asp-action="Criar" method="post">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Sobrenome" class="control-label"></label>
        <input asp-for="Sobrenome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DataNascimento" class="control-label"></label>
        <input asp-for="DataNascimento" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Sexo" class="control-label"></label>
        <select asp-for="Sexo" class="form-control">
            <option value="Masculino">Masculino</option>
            <option value="Feminino">Feminino</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Telefone" class="control-label"></label>
        <input asp-for="Telefone" class="form-control" type="tel" />
    </div>
    <div class="form-group">
        <label asp-for="Instagram" class="control-label"></label>
        <input asp-for="Instagram" class="form-control" />
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-secondary">Criar</button>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</form>
