@model ProjetoNutri.Models.Agendamento

<h2>Criar Agendamento</h2>

<form method="post">
    <div class="form-group">
        <label for="PacienteId">Paciente</label>
        <select id="PacienteId" name="PacienteId" class="form-control">
            @foreach (var paciente in ViewBag.Pacientes)
            {
                <option value="@paciente.Value">@paciente.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Data">Data</label>
        <input type="date" id="Data" name="Data" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Hora">Hora</label>
        <input type="time" id="Hora" name="Hora" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Observacao">Observação</label>
        <textarea id="Observacao" name="Observacao" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Criar Agendamento</button>
</form>


