@model ProjetoNutri.Models.Imc

@{
    ViewData["Title"] = "Criar Medição de IMC";
}

<h2>Criar Medição de IMC</h2>

<form asp-action="CriarImc" method="post">
    <!-- Campo oculto para IdProjeto -->
    <input type="hidden" asp-for="IdProjeto" />

    <div class="form-group">
        <label asp-for="Peso" class="control-label"></label>
        <input asp-for="Peso" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="Peso" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Altura" class="control-label"></label>
        <input asp-for="Altura" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="Altura" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
