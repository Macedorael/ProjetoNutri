@model ProjetoNutri.Models.Refeicao

@{
    ViewData["Title"] = "Criar Categoria de Refeição";
}

<h2>Criar Novo Paciente</h2>

<form asp-action="CriarRefeicao" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-secondary">Criar</button>
        <a asp-action="IndexRefeicao" class="btn btn-secondary">Voltar</a>
    </div>
</form>
