@model ProjetoNutri.Models.ProjetoDietaViewModel

<h2 class="mb-4 text-primary text-center texto">üçΩÔ∏è Minhas Refei√ß√µes</h2>

<!-- Bot√£o para criar uma nova refei√ß√£o -->


<div class="mt-4 d-flex justify-content-between">
    <a asp-action="DetalheProjeto" asp-controller="Projeto" asp-route-id="@Model.Projeto.Id" class="btn btn-secondary">
        üîô Voltar para Detalhes do Projeto
    </a>
    <button id="btnCriarRefeicao" class="btn btn-secondary">+ Nova Refei√ß√£o</button>
</div>


<br>
<!-- Formul√°rio oculto para criar nova refei√ß√£o -->
<div id="formCriarRefeicao" class="card p-3 shadow-sm mb-4" style="display:none;">
    <h4 class="text-secondary">Criar Nova Refei√ß√£o</h4>
    <form asp-action="CriarRefeicao" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Refeicao.Nome" class="control-label fw-bold"></label>
            <input asp-for="Refeicao.Nome" class="form-control" placeholder="Nome da Refei√ß√£o"/>
            <span asp-validation-for="Refeicao.Nome" class="text-danger"></span>
        </div>
        <!-- Campo oculto para passar o ID do Projeto -->
       <input type="hidden" name="Refeicao.IdProjeto" value="@Model.Projeto.Id" />
        <div class="mt-3">
            <button type="submit" class="btn btn-secondary">Criar</button>
            <a asp-action="IndexRefeicao" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

<!-- Resumo Nutricional Geral -->
<div class="card p-3 shadow-sm mb-4 total">
    <h4 class="text-primary text-center texto">Resumo Nutricional</h4>
    <div class="row text-center">
        <div class="col-md-2">
            <p><strong>üí™ Prote√≠na:</strong> @Model.TotalProteinaGeral.ToString("F2") g</p>
        </div>
        <div class="col-md-2">
            <p><strong>ü•ì Lip√≠dio:</strong> @Model.TotalLipidioGeral.ToString("F2") g</p>
        </div>
        <div class="col-md-2">
            <p><strong>üçû Carboidrato:</strong> @Model.TotalCarboidratoGeral.ToString("F2") g</p>
        </div>
        <div class="col-md-3">
            <p><strong>üî• Energia:</strong> @Model.TotalKcalGeral.ToString("F2") kcal</p>
        </div>
        <div class="col-md-3">
            <p><strong>‚ö° Energia:</strong> @Model.TotalKjGeral.ToString("F2") kJ</p>
        </div>
    </div>
</div>

<!-- Lista de Refei√ß√µes (Sortable) -->
<div id="sortableRefeicoes" class="list-group">
    @foreach (var refeicao in Model.Refeicaos)
    {
        <div class="list-group-item refeicao-item shadow-sm p-3 mb-3 bg-white rounded" data-id="@refeicao.Id">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-3 text-center fw-bold">@refeicao.Nome</h4>
                <div>
                    <a asp-action="EditarRefeicao" asp-route-id="@refeicao.Id" class="btn btn-outline-dark">‚úèÔ∏è Editar</a>
                    <a asp-action="DuplicarRefeicao"
                    asp-controller="Refeicao"
                    asp-route-id="@refeicao.Id"
                    class="btn btn-outline-primary ms-2">
                        üìã Duplicar
                    </a>
                </div>
            </div>

            @if (refeicao.Refeicao_Alimentos != null && refeicao.Refeicao_Alimentos.Any())
            {
                <div class="card p-3 mb-4 shadow-sm">
                    <div class="row text-center">
                        <div class="col-md-2">
                            <p><strong>üí™ Prote√≠na:</strong> @Model.TotalProteinaPorRefeicao[refeicao.Id].ToString("F2") g</p>
                        </div>
                        <div class="col-md-2">
                            <p><strong>ü•ì Lip√≠dio:</strong> @Model.TotalLipidioPorRefeicao[refeicao.Id].ToString("F2") g</p>
                        </div>
                        <div class="col-md-2">
                            <p><strong>üçû Carboidrato:</strong> @Model.TotalCarboidratoPorRefeicao[refeicao.Id].ToString("F2") g</p>
                        </div>
                        <div class="col-md-3">
                            <p><strong>üî• Energia:</strong> @Model.TotalKcalPorRefeicao[refeicao.Id].ToString("F2") kcal</p>
                        </div>
                        <div class="col-md-3">
                            <p><strong>‚ö° Energia:</strong> @Model.TotalKjPorRefeicao[refeicao.Id].ToString("F2") kJ</p>
                        </div>
                    </div>
                </div>

                <table class="table table-bordered mt-3">
                    <thead class="table-light text-center">
                        <tr>
                            <th>üçè Alimento</th>
                            <th>üìè Quantidade (g)</th>
                            <th>üí™ Prote√≠na (g)</th>
                            <th>ü•ì Lip√≠dio (g)</th>
                            <th>üçû Carboidrato (g)</th>
                            <th>üî• Energia (KJ)</th>
                            <th>üî• Energia (Kcal)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var refeicaoAlimento in refeicao.Refeicao_Alimentos)
                        {
                            <tr class="text-center">
                                <td><strong>@refeicaoAlimento.Alimento.Nome</strong></td>
                                <td>@((refeicaoAlimento.Quantidade / 1000).ToString("F3"))</td>
                                <td>@refeicaoAlimento.Alimento.Proteina.ToString("F2")</td>
                                <td>@refeicaoAlimento.Alimento.Lipidio.ToString("F2")</td>
                                <td>@refeicaoAlimento.Alimento.Carboidrato.ToString("F2")</td>
                                <td>@refeicaoAlimento.Alimento.Energia_KJ.ToString("F2")</td>
                                <td>@refeicaoAlimento.Alimento.Energia_Kcal.ToString("F2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-center text-muted">Nenhum alimento adicionado.</p>
            }

            <div class="text-center mt-3">
                <a asp-action="CriarRefeicao_Alimento"
                    asp-controller="Refeicao_Alimento"
                    asp-route-refeicaoId="@refeicao.Id"
                    asp-route-idProjeto="@Model.Projeto.Id"
                    class="btn btn-outline-dark">
                        ‚ûï Adicionar Alimento
                </a>

            </div>
        </div>
    }
</div>

@section Scripts {
    <!-- jQuery e jQuery UI para Sortable -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
        $(document).ready(function () {
            // Alternar o formul√°rio de criar refei√ß√£o
            $('#btnCriarRefeicao').on('click', function () {
                $('#formCriarRefeicao').toggle();
            });

            // Recuperar ordem salva no localStorage
            function carregarOrdem() {
                let ordemSalva = localStorage.getItem("ordemRefeicoes");
                if (ordemSalva) {
                    let ordem = JSON.parse(ordemSalva);
                    let container = $("#sortableRefeicoes");

                    ordem.forEach(function (id) {
                        let item = container.find(`.refeicao-item[data-id='${id}']`);
                        container.append(item); // Reordena os itens na tela
                    });
                }
            }

            // Ativar arrastar e soltar
            $("#sortableRefeicoes").sortable({
                placeholder: "ui-state-highlight",
                update: function () {
                    let ordemAtual = [];
                    $(".refeicao-item").each(function () {
                        ordemAtual.push($(this).attr("data-id"));
                    });
                    localStorage.setItem("ordemRefeicoes", JSON.stringify(ordemAtual)); // Salva no localStorage
                }
            }).disableSelection();

            // Carregar a ordem salva ao iniciar
            carregarOrdem();
        });
    </script>
}
